#!ipxe

echo CentOS 7
echo {{ uuid }}
set urlmirror http://mirror.yandex.ru/centos/7/os/x86_64
echo Load kernel...
kernel ${urlmirror}/images/pxeboot/vmlinuz loglevel=debug keyboard=us lang=ru_RU text netwait=120 ksdevice=link edd=off repo=${urlmirror} ks=http://pxe.justhost.ru/uuid/{{ uuid }}.auto.php
echo Load initrd...
initrd ${urlmirror}/images/pxeboot/initrd.img
echo Boot
boot
